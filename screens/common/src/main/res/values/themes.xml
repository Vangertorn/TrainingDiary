<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TrainingDiary" parent="Theme.MaterialComponents.Light.NoActionBar">

        <!-- Text Appearance -->
        <item name="textAppearanceRegularPrimary14SP">@style/TextAppearance.Regular.Primary.14SP</item>
        <item name="textAppearanceRegularPrimary18SP">@style/TextAppearance.Regular.Primary.18SP</item>
        <item name="TextAppearanceBoldSecondary14SP">@style/TextAppearance.Bold.Secondary.14SP</item>
        <item name="TextAppearanceBoldSecondary16SP">@style/TextAppearance.Bold.Secondary.16SP</item>


        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/crimson</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="transparent">@color/transparent</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <!-- makes all dialogs in your app use your dialog theme by default -->
        <item name="alertDialogTheme">@style/DialogTheme</item>
        <item name="android:alertDialogTheme">?alertDialogTheme</item>
        <item name="dialogTheme">?alertDialogTheme</item>
        <item name="android:dialogTheme">?alertDialogTheme</item>
        <!-- Default Style -->
        <item name="bottomSheetDialogTheme">@style/ThemeOverlay.TrainingDiary.BottomSheetDialog</item>
    </style>



    <style name="DialogTheme" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="android:buttonStyle">@color/crimson</item>
        <item name="android:textColorHint">@color/black</item>

    </style>

    <style name="Theme.TrainingDiary.Light" parent="Theme.TrainingDiary">
        <!-- Colors -->
        <item name="textColorSecondary">@color/text_color_secondary_light</item>
        <item name="textColorPrimary">@color/text_color_primary_light</item>
        <item name="contentBackground">@color/content_background_light</item>
    </style>

    <style name="Theme.TrainingDiary.Dark" parent="Theme.TrainingDiary">
        <!-- Colors -->
        <item name="textColorSecondary">@color/text_color_secondary_dark</item>
        <item name="textColorPrimary">@color/text_color_primary_dark</item>
        <item name="contentBackground">@color/content_background_dark</item>
    </style>

    <style name="Theme.TrainingDiary.Night" parent="Theme.TrainingDiary">
        <!-- Colors -->
        <item name="textColorSecondary">@color/text_color_secondary_night</item>
        <item name="textColorPrimary">@color/text_color_primary_night</item>
        <item name="contentBackground">@color/content_background_night</item>
    </style>

    <style name="ThemeOverlay.TrainingDiary.BottomSheetDialog" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="android:backgroundDimAmount">0.5</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="bottomSheetStyle">@style/Widget.TrainingDiary.BottomSheet</item>
    </style>


</resources>